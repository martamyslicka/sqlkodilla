CREATE TABLE ISSUESLISTS
(
    ID SERIAL PRIMARY KEY,
    NAME VARCHAR(100)
);


CREATE TABLE ISSUES
(
    ID SERIAL PRIMARY KEY,
    USER_ID_ASSIGNEDTO  BIGINT UNSIGNED NOT NULL,
    SUMMARY VARCHAR(100),
    DESCRIPTION VARCHAR(1024),
    FOREIGN KEY(USER_ID_ASSIGNEDTO) REFERENCES ISSUESLISTS(ID)
);


